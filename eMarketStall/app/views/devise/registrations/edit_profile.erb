<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Update your profile</h1>

          <%= form_with(model: @user, url: update_profile_path, method: :patch) do |form| %>
            <div class="form-group">
              <%= form.label :città, "City of residence", class: "font-weight-bold" %>
              <%= form.text_field :città, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :num_telefono, "Telephone", class: "font-weight-bold" %>
              <%= form.text_field :num_telefono, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :via_residenza, "Street of residence", class: "font-weight-bold" %>
              <%= form.text_field :via_residenza, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :cap_residenza, "CAP", class: "font-weight-bold" %>
              <%= form.text_field :cap_residenza, class: "form-control" %>
            </div>

            <p>Select your role:</p>
            <div class="form-check">
              <%= form.radio_button :roles_mask, '1', checked: form.object.roles_mask.to_s == '1', class: "form-check-input" %>
              <%= form.label :roles_mask_seller, "Seller", class: "form-check-label font-weight-bold" %>
            </div>
            <div class="form-check">
              <%= form.radio_button :roles_mask, '2', checked: form.object.roles_mask.to_s == '2', class: "form-check-input" %>
              <%= form.label :roles_mask_buyer, "Buyer", class: "form-check-label font-weight-bold" %>
            </div>

            <br>

            <% if !@user.images.attached? %>
              <div class="field">
                <%= form.label :images, "Add your profile picture" %>
                <%= form.file_field :images, multiple: false %>
              </div>
            <% else %>
              <div class="field">
                <%= form.label :images, "Modify your profile picture" %>
                <%= form.file_field :images, multiple: false %>
              </div>
            <% end %>

            <br>

            <div class="text-center">
              <%= form.submit 'Update', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

