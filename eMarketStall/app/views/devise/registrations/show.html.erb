
<h3>My profile</h3>
<hr>
<br>
<h1><%= @user.nome+" "+@user.cognome %></h1>


<div class="row align-items-center">
  <div class="col-md-6">
    <div class="row">
      <div class="p-5">
        <% if @user.images.length==0 %>
          <img src="https://t4.ftcdn.net/jpg/02/60/78/83/360_F_260788352_x5sSHM4DGvpjHj9wz8sFltzAPktQwJCj.jpg">
        <% else %>
          <%= image_tag(@user.thumbnail) %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6 p-5">
      <div class="row">
        <div class="col-md-8">
         <h4>Email: <%= @user.email %></h4>
          <%if @user.roles_mask == 1 %>
          <h4>Current role registered: seller</h4>
          <% else %>
          <h4>Current role registered: buyer</h4>
          <%end%>
        </div>
      </div>
      <br>
      <br>
      <br>
    <% if can? :see, Product %>
      <div class="row">
        <div class="col-md-8">
          <h4><%= link_to 'View how your products have been reviewed', user_reviews_path(:user_id => @user.id) %></h4>
        </div>
        <div class="col-md-4">
          <h4>stelle</h4>
        </div>
      </div>
      <hr>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <h4><%= link_to 'Modify profile', edit_profile_path %></h4>
      </div>
    </div>
    <% if can? :see, Product %>
      <hr>
      <div class="row">
        <div class="col-md-12">
          <h4><%= link_to 'My products', user_my_products_path(current_user) %></h4>
        </div>
      </div>
      <hr>
    <% end %>
    <% if can? :see, Product %>
      <div class="row">
        <div class="col-md-6 justify-content-center">
          <h4>Add a product</h4>
        </div>
        <div class="col-md-6 justify-content-start align-items-center">
          <a href="/products/new" id="new-prdt">
                <svg xmlns="http://www.w3.org/2000/svg" id="prdt" height="4em" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z"></path></svg>
          </a>
        
        </div>
      </div>
    <% end %>
  </div>
</div>