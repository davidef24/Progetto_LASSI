<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center d-flex justify-content-center align-items-center">
    <hr>
    <%= link_to "Non hai un account? Registrati", new_registration_path(resource_name), class: "btn btn-success text-white font-weight-bold" %>
  </p>
<% end %>


<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login",
      url: omniauth_authorize_path(resource_name, provider),
      method: :post,
      data: {turbo: "false"} do |f| %>
      <div class="text-center">
        Oppure <br>
        <%= f.submit "Login", type: "image", src: url_for("/assets/btn_google_signin_dark_pressed_web.png"), class: "img-fluid" %>
      </div>
    <% end %>
  <% end %>
<% end %>


<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary" %>
  </p>
<% end %>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>




